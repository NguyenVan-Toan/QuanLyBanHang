@* @model IEnumerable<QuanLyBanHang.Data.Entities.Category> *@
@model IEnumerable<QuanLyBanHang.ViewModels.CategoryViewModel>

@{
    ViewData["Title"] = "Category";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.CategoryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.CategoryName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <a class="btn btn-secondary ms-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-secondary ms-2"
                        href="~/categories/@SlugGenerator.SlugGenerator.GenerateSlug(item.CategoryName)-@item.Id">Details</a>
                    <a class="btn btn-danger ms-2" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
